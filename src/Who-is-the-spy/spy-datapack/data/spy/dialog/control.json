    "actions": [
        {
            "label": {
                "text": "开始游戏",
                "color": "dark_green"
            },
            "action": {
                "type": "run_command",
                "command": "function spy:game/start/ready"
            }
        },
        {
            "label": {
                "text": "结束游戏",
                "color": "red"
            },
            "action": {
                "type": "run_command",
                "command": "function spy:game/end"
            }
        }
    ]
