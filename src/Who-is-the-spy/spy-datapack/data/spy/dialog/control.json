        {
            "type": "plain_message",
            "contents": [{"text": "2. 玩家都需要"},{"text": "OP权限\n","color": "dark_purple"}]
        },
        {
            "type": "item",
            "item": {
                "id": "poppy"
            },
            "description": {
                "text": "游戏流程",
                "color": "gold",
            "bold": true
            },
            "show_decorations": false,
            "show_tooltip": false
        },
        {
            "type": "plain_message",
            "contents": [{"text": "1. 设置昵称","hover_event": {"action": "show_text","value": {"text": "中英文均可"}}}]
