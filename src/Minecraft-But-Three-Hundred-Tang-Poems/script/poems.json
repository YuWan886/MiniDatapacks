[
    {
        "poem_num": 1,
        "text": [
            "床前明月光",
            "疑似地上霜",
            "举头望明月",
            "低头思故乡"
        ],
        "author": "李白",
        "title": "静夜思"
    },
    {
        "poem_num": 2,
        "text": [
            "白日依山尽",
            "黄河入海流",
            "欲穷千里目",
            "更上一层楼"
        ],
        "author": "王之涣",
        "title": "登鹳雀楼"
    },
    {
        "poem_num": 3,
        "text": [
            "春眠不觉晓",
            "处处闻啼鸟",
            "夜来风雨声",
            "花落知多少"
        ],
        "author": "孟浩然",
        "title": "春晓"
    },
    {
        "poem_num": 4,
        "text": [
            "红豆生南国",
            "春来发几枝",
            "愿君多采撷",
            "此物最相思"
        ],
        "author": "王维",
        "title": "相思"
    },
    {
        "poem_num": 5,
        "text": [
            "慈母手中线",
            "游子身上衣",
            "临行密密缝",
            "意恐迟迟归"
        ],
        "author": "孟郊",
        "title": "游子吟"
    },
    {
        "poem_num": 6,
        "text": [
            "空山不见人",
            "但闻人语响",
            "返景入深林",
            "复照青苔上"
        ],
        "author": "王维",
        "title": "鹿柴"
    },
    {
        "poem_num": 7,
        "text": [
            "锄禾日当午",
            "汗滴禾下土",
            "谁知盘中餐",
            "粒粒皆辛苦"
        ],
        "author": "李绅",
        "title": "悯农"
    },
    {
        "poem_num": 8,
        "text": [
            "离离原上草",
            "一岁一枯荣",
            "野火烧不尽",
            "春风吹又生"
        ],
        "author": "白居易",
        "title": "赋得古原草送别"
    },
    {
        "poem_num": 9,
        "text": [
            "向晚意不适",
            "驱车登古原",
            "夕阳无限好",
            "只是近黄昏"
        ],
        "author": "李商隐",
        "title": "登乐游原"
    },
    {
        "poem_num": 10,
        "text": [
            "千山鸟飞绝",
            "万径人踪灭",
            "孤舟蓑笠翁",
            "独钓寒江雪"
        ],
        "author": "柳宗元",
        "title": "江雪"
    },
    {
        "poem_num": 11,
        "text": [
            "独怜幽草涧边生",
            "上有黄鹂深树鸣",
            "春潮带雨晚来急",
            "野渡无人舟自横"
        ],
        "author": "韦应物",
        "title": "滁州西涧"
    },
    {
        "poem_num": 12,
        "text": [
            "朝辞白帝彩云间",
            "千里江陵一日还",
            "两岸猿声啼不住",
            "轻舟已过万重山"
        ],
        "author": "李白",
        "title": "早发白帝城"
    },
    {
        "poem_num": 13,
        "text": [
            "两个黄鹂鸣翠柳",
            "一行白鹭上青天",
            "窗含西岭千秋雪",
            "门泊东吴万里船"
        ],
        "author": "杜甫",
        "title": "绝句"
    },
    {
        "poem_num": 14,
        "text": [
            "好雨知时节",
            "当春乃发生",
            "随风潜入夜",
            "润物细无声"
        ],
        "author": "杜甫",
        "title": "春夜喜雨"
    },
    {
        "poem_num": 15,
        "text": [
            "月落乌啼霜满天",
            "江枫渔火对愁眠",
            "姑苏城外寒山寺",
            "夜半钟声到客船"
        ],
        "author": "张继",
        "title": "枫桥夜泊"
    },
    {
        "poem_num": 16,
        "text": [
            "秦时明月汉时关",
            "万里长征人未还",
            "但使龙城飞将在",
            "不教胡马度阴山"
        ],
        "author": "王昌龄",
        "title": "出塞"
    },
    {
        "poem_num": 17,
        "text": [
            "远上寒山石径斜",
            "白云深处有人家",
            "停车坐爱枫林晚",
            "霜叶红于二月花"
        ],
        "author": "杜牧",
        "title": "山行"
    },
    {
        "poem_num": 18,
        "text": [
            "清明时节雨纷纷",
            "路上行人欲断魂",
            "借问酒家何处有",
            "牧童遥指杏花村"
        ],
        "author": "杜牧",
        "title": "清明"
    },
    {
        "poem_num": 19,
        "text": [
            "少小离家老大回",
            "乡音无改鬓毛衰",
            "儿童相见不相识",
            "笑问客从何处来"
        ],
        "author": "贺知章",
        "title": "回乡偶书"
    },
    {
        "poem_num": 20,
        "text": [
            "君自故乡来",
            "应知故乡事",
            "来日绮窗前",
            "寒梅著花未"
        ],
        "author": "王维",
        "title": "杂诗"
    },
    {
        "poem_num": 21,
        "text": [
            "海上生明月",
            "天涯共此时",
            "情人怨遥夜",
            "竟夕起相思"
        ],
        "author": "张九龄",
        "title": "望月怀远"
    },
    {
        "poem_num": 22,
        "text": [
            "移舟泊烟渚",
            "日暮客愁新",
            "野旷天低树",
            "江清月近人"
        ],
        "author": "孟浩然",
        "title": "宿建德江"
    },
    {
        "poem_num": 23,
        "text": [
            "众鸟高飞尽",
            "孤云独去闲",
            "相看两不厌",
            "只有敬亭山"
        ],
        "author": "李白",
        "title": "独坐敬亭山"
    },
    {
        "poem_num": 24,
        "text": [
            "人闲桂花落",
            "夜静春山空",
            "月出惊山鸟",
            "时鸣春涧中"
        ],
        "author": "王维",
        "title": "鸟鸣涧"
    },
    {
        "poem_num": 25,
        "text": [
            "白日登山望烽火",
            "黄昏饮马傍交河",
            "行人刁斗风沙暗",
            "公主琵琶幽怨多"
        ],
        "author": "李颀",
        "title": "古从军行"
    },
    {
        "poem_num": 26,
        "text": [
            "葡萄美酒夜光杯",
            "欲饮琵琶马上催",
            "醉卧沙场君莫笑",
            "古来征战几人回"
        ],
        "author": "王翰",
        "title": "凉州词"
    },
    {
        "poem_num": 27,
        "text": [
            "故人西辞黄鹤楼",
            "烟花三月下扬州",
            "孤帆远影碧空尽",
            "唯见长江天际流"
        ],
        "author": "李白",
        "title": "黄鹤楼送孟浩然之广陵"
    },
    {
        "poem_num": 28,
        "text": [
            "月黑雁飞高",
            "单于夜遁逃",
            "欲将轻骑逐",
            "大雪满弓刀"
        ],
        "author": "卢纶",
        "title": "塞下曲"
    },
    {
        "poem_num": 29,
        "text": [
            "曾经沧海难为水",
            "除却巫山不是云",
            "取次花丛懒回顾",
            "半缘修道半缘君"
        ],
        "author": "元稹",
        "title": "离思五首·其四"
    },
    {
        "poem_num": 30,
        "text": [
            "松下问童子",
            "言师采药去",
            "只在此山中",
            "云深不知处"
        ],
        "author": "贾岛",
        "title": "寻隐者不遇"
    },
    {
        "poem_num": 31,
        "text": [
            "岭外音书断",
            "经冬复历春",
            "近乡情更怯",
            "不敢问来人"
        ],
        "author": "宋之问",
        "title": "渡汉江"
    },
    {
        "poem_num": 32,
        "text": [
            "山中相送罢",
            "日暮掩柴扉",
            "春草年年绿",
            "王孙归不归"
        ],
        "author": "王维",
        "title": "送别"
    },
    {
        "poem_num": 33,
        "text": [
            "功盖三分国",
            "名成八阵图",
            "江流石不转",
            "遗恨失吞吴"
        ],
        "author": "杜甫",
        "title": "八阵图"
    },
    {
        "poem_num": 34,
        "text": [
            "终南阴岭秀",
            "积雪浮云端",
            "林表明霁色",
            "城中增暮寒"
        ],
        "author": "祖咏",
        "title": "终南望余雪"
    },
    {
        "poem_num": 35,
        "text": [
            "泠泠七弦上",
            "静听松风寒",
            "古调虽自爱",
            "今人多不弹"
        ],
        "author": "刘长卿",
        "title": "弹琴"
    },
    {
        "poem_num": 36,
        "text": [
            "三日入厨下",
            "洗手作羹汤",
            "未谙姑食性",
            "先遣小姑尝"
        ],
        "author": "王建",
        "title": "新嫁娘词"
    },
    {
        "poem_num": 37,
        "text": [
            "北斗七星高",
            "哥舒夜带刀",
            "至今窥牧马",
            "不敢过临洮"
        ],
        "author": "西鄙人",
        "title": "哥舒歌"
    },
    {
        "poem_num": 38,
        "text": [
            "打起黄莺儿",
            "莫教枝上啼",
            "啼时惊妾梦",
            "不得到辽西"
        ],
        "author": "金昌绪",
        "title": "春怨"
    },
    {
        "poem_num": 39,
        "text": [
            "寥落古行宫",
            "宫花寂寞红",
            "白头宫女在",
            "闲坐说玄宗"
        ],
        "author": "元稹",
        "title": "行宫"
    },
    {
        "poem_num": 40,
        "text": [
            "绿蚁新醅酒",
            "红泥小火炉",
            "晚来天欲雪",
            "能饮一杯无"
        ],
        "author": "白居易",
        "title": "问刘十九"
    },
    {
        "poem_num": 41,
        "text": [
            "昨夜裙带解",
            "今朝蟢子飞",
            "铅华不可弃",
            "莫是藁砧归"
        ],
        "author": "权德舆",
        "title": "玉台体"
    },
    {
        "poem_num": 42,
        "text": [
            "千山万水不曾行",
            "魂梦欲教何处觅",
            "除却巫山不是云",
            "取次花丛懒回顾"
        ],
        "author": "元稹",
        "title": "离思"
    },
    {
        "poem_num": 43,
        "text": [
            "朱雀桥边野草花",
            "乌衣巷口夕阳斜",
            "旧时王谢堂前燕",
            "飞入寻常百姓家"
        ],
        "author": "刘禹锡",
        "title": "乌衣巷"
    },
    {
        "poem_num": 44,
        "text": [
            "锦瑟无端五十弦",
            "一弦一柱思华年",
            "庄生晓梦迷蝴蝶",
            "望帝春心托杜鹃"
        ],
        "author": "李商隐",
        "title": "锦瑟"
    },
    {
        "poem_num": 45,
        "text": [
            "相见时难别亦难",
            "东风无力百花残",
            "春蚕到死丝方尽",
            "蜡炬成灰泪始干"
        ],
        "author": "李商隐",
        "title": "无题"
    },
    {
        "poem_num": 46,
        "text": [
            "天门中断楚江开",
            "碧水东流至此回",
            "两岸青山相对出",
            "孤帆一片日边来"
        ],
        "author": "李白",
        "title": "望天门山"
    },
    {
        "poem_num": 47,
        "text": [
            "横看成岭侧成峰",
            "远近高低各不同",
            "不识庐山真面目",
            "只缘身在此山中"
        ],
        "author": "苏轼",
        "title": "题西林壁"
    },
    {
        "poem_num": 48,
        "text": [
            "莫笑农家腊酒浑",
            "丰年留客足鸡豚",
            "山重水复疑无路",
            "柳暗花明又一村"
        ],
        "author": "陆游",
        "title": "游山西村"
    },
    {
        "poem_num": 49,
        "text": [
            "京口瓜洲一水间",
            "钟山只隔数重山",
            "春风又绿江南岸",
            "明月何时照我还"
        ],
        "author": "王安石",
        "title": "泊船瓜洲"
    },
    {
        "poem_num": 50,
        "text": [
            "咬定青山不放松",
            "立根原在破岩中",
            "千磨万击还坚劲",
            "任尔东西南北风"
        ],
        "author": "郑燮",
        "title": "竹石"
    },
    {
        "poem_num": 51,
        "text": [
            "日照香炉生紫烟",
            "遥看瀑布挂前川",
            "飞流直下三千尺",
            "疑是银河落九天"
        ],
        "author": "李白",
        "title": "望庐山瀑布"
    },
    {
        "poem_num": 52,
        "text": [
            "胜日寻芳泗水滨",
            "无边光景一时新",
            "等闲识得东风面",
            "万紫千红总是春"
        ],
        "author": "朱熹",
        "title": "春日"
    },
    {
        "poem_num": 53,
        "text": [
            "黄河远上白云间",
            "一片孤城万仞山",
            "羌笛何须怨杨柳",
            "春风不度玉门关"
        ],
        "author": "王之涣",
        "title": "凉州词"
    },
    {
        "poem_num": 54,
        "text": [
            "月下飞天镜",
            "云生结海楼",
            "仍怜故乡水",
            "万里送行舟"
        ],
        "author": "李白",
        "title": "渡荆门送别"
    },
    {
        "poem_num": 55,
        "text": [
            "独在异乡为异客",
            "每逢佳节倍思亲",
            "遥知兄弟登高处",
            "遍插茱萸少一人"
        ],
        "author": "王维",
        "title": "九月九日忆山东兄弟"
    },
    {
        "poem_num": 56,
        "text": [
            "墙角数枝梅",
            "凌寒独自开",
            "遥知不是雪",
            "为有暗香来"
        ],
        "author": "王安石",
        "title": "梅花"
    },
    {
        "poem_num": 57,
        "text": [
            "床前看月光",
            "疑是地上霜",
            "举头望山月",
            "低头思故乡"
        ],
        "author": "李白",
        "title": "静夜思（异文）"
    },
    {
        "poem_num": 58,
        "text": [
            "一道残阳铺水中",
            "半江瑟瑟半江红",
            "可怜九月初三夜",
            "露似真珠月似弓"
        ],
        "author": "白居易",
        "title": "暮江吟"
    },
    {
        "poem_num": 59,
        "text": [
            "黑云翻墨未遮山",
            "白雨跳珠乱入船",
            "卷地风来忽吹散",
            "望湖楼下水如天"
        ],
        "author": "苏轼",
        "title": "六月二十七日望湖楼醉书"
    },
    {
        "poem_num": 60,
        "text": [
            "死去元知万事空",
            "但悲不见九州同",
            "王师北定中原日",
            "家祭无忘告乃翁"
        ],
        "author": "陆游",
        "title": "示儿"
    },
    {
        "poem_num": 61,
        "text": [
            "小时不识月",
            "呼作白玉盘",
            "又疑瑶台镜",
            "飞在青云端"
        ],
        "author": "李白",
        "title": "古朗月行（节选）"
    },
    {
        "poem_num": 62,
        "text": [
            "众芳摇落独暄妍",
            "占尽风情向小园",
            "疏影横斜水清浅",
            "暗香浮动月黄昏"
        ],
        "author": "林逋",
        "title": "山园小梅"
    },
    {
        "poem_num": 63,
        "text": [
            "去年今日此门中",
            "人面桃花相映红",
            "人面不知何处去",
            "桃花依旧笑春风"
        ],
        "author": "崔护",
        "title": "题都城南庄"
    },
    {
        "poem_num": 64,
        "text": [
            "折戟沉沙铁未销",
            "自将磨洗认前朝",
            "东风不与周郎便",
            "铜雀春深锁二乔"
        ],
        "author": "杜牧",
        "title": "赤壁"
    },
    {
        "poem_num": 65,
        "text": [
            "银烛秋光冷画屏",
            "轻罗小扇扑流萤",
            "天阶夜色凉如水",
            "卧看牵牛织女星"
        ],
        "author": "杜牧",
        "title": "秋夕"
    },
    {
        "poem_num": 66,
        "text": [
            "千锤万凿出深山",
            "烈火焚烧若等闲",
            "粉骨碎身浑不怕",
            "要留清白在人间"
        ],
        "author": "于谦",
        "title": "石灰吟"
    },
    {
        "poem_num": 67,
        "text": [
            "浩荡离愁白日斜",
            "吟鞭东指即天涯",
            "落红不是无情物",
            "化作春泥更护花"
        ],
        "author": "龚自珍",
        "title": "己亥杂诗·其五"
    },
    {
        "poem_num": 68,
        "text": [
            "九州生气恃风雷",
            "万马齐喑究可哀",
            "我劝天公重抖擞",
            "不拘一格降人才"
        ],
        "author": "龚自珍",
        "title": "己亥杂诗·其二百二十"
    },
    {
        "poem_num": 69,
        "text": [
            "水光潋滟晴方好",
            "山色空蒙雨亦奇",
            "欲把西湖比西子",
            "淡妆浓抹总相宜"
        ],
        "author": "苏轼",
        "title": "饮湖上初晴后雨"
    },
    {
        "poem_num": 70,
        "text": [
            "生当作人杰",
            "死亦为鬼雄",
            "至今思项羽",
            "不肯过江东"
        ],
        "author": "李清照",
        "title": "夏日绝句"
    },
    {
        "poem_num": 71,
        "text": [
            "僵卧孤村不自哀",
            "尚思为国戍轮台",
            "夜阑卧听风吹雨",
            "铁马冰河入梦来"
        ],
        "author": "陆游",
        "title": "十一月四日风雨大作"
    },
    {
        "poem_num": 72,
        "text": [
            "梅雪争春未肯降",
            "骚人阁笔费评章",
            "梅须逊雪三分白",
            "雪却输梅一段香"
        ],
        "author": "卢梅坡",
        "title": "雪梅"
    },
    {
        "poem_num": 73,
        "text": [
            "应怜屐齿印苍苔",
            "小扣柴扉久不开",
            "春色满园关不住",
            "一枝红杏出墙来"
        ],
        "author": "叶绍翁",
        "title": "游园不值"
    },
    {
        "poem_num": 74,
        "text": [
            "草长莺飞二月天",
            "拂堤杨柳醉春烟",
            "儿童散学归来早",
            "忙趁东风放纸鸢"
        ],
        "author": "高鼎",
        "title": "村居"
    },
    {
        "poem_num": 75,
        "text": [
            "毕竟西湖六月中",
            "风光不与四时同",
            "接天莲叶无穷碧",
            "映日荷花别样红"
        ],
        "author": "杨万里",
        "title": "晓出净慈寺送林子方"
    },
    {
        "poem_num": 76,
        "text": [
            "泉眼无声惜细流",
            "树阴照水爱晴柔",
            "小荷才露尖尖角",
            "早有蜻蜓立上头"
        ],
        "author": "杨万里",
        "title": "小池"
    },
    {
        "poem_num": 77,
        "text": [
            "黄四娘家花满蹊",
            "千朵万朵压枝低",
            "留连戏蝶时时舞",
            "自在娇莺恰恰啼"
        ],
        "author": "杜甫",
        "title": "江畔独步寻花"
    },
    {
        "poem_num": 78,
        "text": [
            "月黑见渔灯",
            "孤光一点萤",
            "微微风簇浪",
            "散作满河星"
        ],
        "author": "查慎行",
        "title": "舟夜书所见"
    },
    {
        "poem_num": 79,
        "text": [
            "绿遍山原白满川",
            "子规声里雨如烟",
            "乡村四月闲人少",
            "才了蚕桑又插田"
        ],
        "author": "翁卷",
        "title": "乡村四月"
    },
    {
        "poem_num": 80,
        "text": [
            "古木阴中系短篷",
            "杖藜扶我过桥东",
            "沾衣欲湿杏花雨",
            "吹面不寒杨柳风"
        ],
        "author": "志南",
        "title": "绝句"
    },
    {
        "poem_num": 81,
        "text": [
            "一雨池塘水面平",
            "淡磨明镜照檐楹",
            "东风忽起垂杨舞",
            "更作荷心万点声"
        ],
        "author": "刘攽",
        "title": "雨后池上"
    },
    {
        "poem_num": 82,
        "text": [
            "花开不并百花丛",
            "独立疏篱趣未穷",
            "宁可枝头抱香死",
            "何曾吹落北风中"
        ],
        "author": "郑思肖",
        "title": "寒菊"
    },
    {
        "poem_num": 83,
        "text": [
            "半亩方塘一鉴开",
            "天光云影共徘徊",
            "问渠那得清如许",
            "为有源头活水来"
        ],
        "author": "朱熹",
        "title": "观书有感"
    },
    {
        "poem_num": 84,
        "text": [
            "莫道谗言如浪深",
            "莫言迁客似沙沉",
            "千淘万漉虽辛苦",
            "吹尽狂沙始到金"
        ],
        "author": "刘禹锡",
        "title": "浪淘沙"
    },
    {
        "poem_num": 85,
        "text": [
            "山外青山楼外楼",
            "西湖歌舞几时休",
            "暖风熏得游人醉",
            "直把杭州作汴州"
        ],
        "author": "林升",
        "title": "题临安邸"
    },
    {
        "poem_num": 86,
        "text": [
            "横笛闻声不见人",
            "红旗直上天山雪",
            "更催飞将追骄虏",
            "莫遣沙场匹马还"
        ],
        "author": "陈羽",
        "title": "从军行"
    },
    {
        "poem_num": 87,
        "text": [
            "未及前贤更勿疑",
            "递相祖述复先谁",
            "别裁伪体亲风雅",
            "转益多师是汝师"
        ],
        "author": "杜甫",
        "title": "戏为六绝句"
    },
    {
        "poem_num": 88,
        "text": [
            "洛阳城里见秋风",
            "欲作家书意万重",
            "复恐匆匆说不尽",
            "行人临发又开封"
        ],
        "author": "张籍",
        "title": "秋思"
    },
    {
        "poem_num": 89,
        "text": [
            "誓扫匈奴不顾身",
            "五千貂锦丧胡尘",
            "可怜无定河边骨",
            "犹是春闺梦里人"
        ],
        "author": "陈陶",
        "title": "陇西行"
    },
    {
        "poem_num": 90,
        "text": [
            "独上江楼思渺然",
            "月光如水水如天",
            "同来望月人何处",
            "风景依稀似去年"
        ],
        "author": "赵嘏",
        "title": "江楼感旧"
    },
    {
        "poem_num": 91,
        "text": [
            "劝君莫惜金缕衣",
            "劝君惜取少年时",
            "花开堪折直须折",
            "莫待无花空折枝"
        ],
        "author": "杜秋娘",
        "title": "金缕衣"
    },
    {
        "poem_num": 92,
        "text": [
            "长江悲已滞",
            "万里念将归",
            "况属高风晚",
            "山山黄叶飞"
        ],
        "author": "王勃",
        "title": "山中"
    },
    {
        "poem_num": 93,
        "text": [
            "隐隐飞桥隔野烟",
            "石矶西畔问渔船",
            "桃花尽日随流水",
            "洞在清溪何处边"
        ],
        "author": "张旭",
        "title": "桃花溪"
    },
    {
        "poem_num": 94,
        "text": [
            "客心争日月",
            "来往预期程",
            "秋风不相待",
            "先至洛阳城"
        ],
        "author": "张说",
        "title": "蜀道后期"
    },
    {
        "poem_num": 95,
        "text": [
            "十年磨一剑",
            "霜刃未曾试",
            "今日把示君",
            "谁有不平事"
        ],
        "author": "贾岛",
        "title": "剑客"
    },
    {
        "poem_num": 96,
        "text": [
            "江雨霏霏江草齐",
            "六朝如梦鸟空啼",
            "无情最是台城柳",
            "依旧烟笼十里堤"
        ],
        "author": "韦庄",
        "title": "台城"
    },
    {
        "poem_num": 97,
        "text": [
            "尽道丰年瑞",
            "丰年事若何",
            "长安有贫者",
            "为瑞不宜多"
        ],
        "author": "罗隐",
        "title": "雪"
    },
    {
        "poem_num": 98,
        "text": [
            "不论平地与山尖",
            "无限风光尽被占",
            "采得百花成蜜后",
            "为谁辛苦为谁甜"
        ],
        "author": "罗隐",
        "title": "蜂"
    },
    {
        "poem_num": 99,
        "text": [
            "泽国江山入战图",
            "生民何计乐樵苏",
            "凭君莫话封侯事",
            "一将功成万骨枯"
        ],
        "author": "曹松",
        "title": "己亥岁二首·其一"
    },
    {
        "poem_num": 100,
        "text": [
            "兰陵美酒郁金香",
            "玉碗盛来琥珀光",
            "但使主人能醉客",
            "不知何处是他乡"
        ],
        "author": "李白",
        "title": "客中行"
    }
]